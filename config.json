{
  "dns_analyzer": {
    "nameservers": ["8.8.8.8", "1.1.1.1","114.114.114.114"],
    "max_cname_depth": 5
  },
  "cert_analyzer": {
    "timeout": 10,
    "port": 443
  },
  "http_analyzer": {
    "timeout": 10,
    "method": "GET",
    "protocol": "https",
    "path": "/",
    "follow_redirects": true,
    "max_redirects": 5,
    "headers": {
      "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36",
      "Accept": "text/html,application/xhtml+xml,application/xml;q=0.9,image/webp,*/*;q=0.8",
      "Accept-Language": "zh-CN,zh;q=0.9,en;q=0.8"
    }
  },
  "cdn_detector": {
    "rules_file": "data/cdn/rules.json"
  },
  "ip_analyzer": {
    "geo_db_path": "data/geoip/GeoLite2-City.mmdb",
    "asn_db_path": "data/geoip/GeoLite2-ASN.mmdb"
  },
  "rule_updater": {
    "rules_file": "data/cdn/rules.json",
    "api_key": ""
  },
  "logging": {
    "level": "warning",
    "file": "log/cdn_check.log",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "httpheader_check": [
    {
      "header": "Server",
      "patterns": [
        "cloudflare|fastly|akamai|ATS|ESF|sucuri|cloudfront|varnish|cdn|edge|netlify|stackpath"
      ],
      "description": "Server 头直接包含 CDN 标识"
    },
    {
      "header": "X-Cache",
      "patterns": [
        "HIT|MISS|HIT from|Hit from|CACHE"
      ],
      "description": "缓存命中状态（常见于 CDN）"
    },
    {
      "header": "Via",
      "patterns": [
        "varnish|akamai|cloudfront|cloudflare|fastly|cdn|proxy"
      ],
      "description": "请求经过 CDN 节点或代理"
    },
    {
      "header": "X-Forwarded-For",
      "patterns": [
        "\\d+\\.\\d+\\.\\d+\\.\\d+,\\s*\\d+\\.\\d+\\.\\d+\\.\\d+"
      ],
      "description": "多级代理（可能是 CDN）"
    },
    {
      "header": "CDN-Loop",
      "patterns": [".+"],
      "description": "明确标识 CDN 循环防护"
    },
    {
      "header": "CF-Cache-Status",
      "patterns": ["HIT|MISS|DYNAMIC"],
      "description": "缓存状态头（即使不关注厂商也可作为 CDN 信号）"
    }
  ]
} 